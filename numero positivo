#include <iostream>
int main() {
    int numero;
    do {
        std::cout << "Ingrese un número positivo: ";
        std::cin >> numero;
        if (numero < 0) {
            std::cout << "El número debe ser positivo." << std::endl;
        }
    } while (numero < 0);

    std::cout << "Número positivo ingresado: " << numero << std::endl;
    return 0;
}
