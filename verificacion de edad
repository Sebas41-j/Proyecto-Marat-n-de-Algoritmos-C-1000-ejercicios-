#include <iostream>
int main() {
    int edad;
    do {
        std::cout << "Ingrese su edad: ";
        std::cin >> edad;
        if (edad < 0 || edad > 120) {
            std::cout << "Edad no valida. Ingrese un valor entre 0 y 120." << std::endl;
        }
    } while (edad < 0 || edad > 120);

    std::cout << "Edad vÃ¡lida ingresada: " << edad << " aÃ±os." << std::endl;
    return 0;
}
